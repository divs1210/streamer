(ns streamer.core-test
  (:require [clojure.test :refer :all]
            [streamer.core :refer :all]))

(deftest tests
  (is
   (= (let [xf (comp (filter even?)
                     (map inc))]
        (sequence xf (range 10)))
      (=> (range 10)
          (filter even?)
          (map inc))))

  (is
   (= (first (reverse (sequence (map inc) (range 5))))
      (=> (range 5)
          (map inc)
          ::seq
          reverse
          first))))
